<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="300dp"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="cursive"
        android:gravity="center_vertical|center_horizontal"
        android:paddingBottom="8dp"
        android:text="Compose a new Tweet"
        android:textColor="@color/twitterColor"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etNew"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_weight="0.79"
        android:ems="10"
        android:inputType="textMultiLine"
        android:maxLength="140" />

    <ImageButton
        android:id="@+id/ibSend"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/etNew"
        android:background="@android:drawable/screen_background_light_transparent"
        android:src="@drawable/newtweet" />

    <ImageButton
        android:id="@+id/ibClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ibSend"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="26dp"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:background="@android:drawable/screen_background_light_transparent"
        app:srcCompat="@drawable/ic_close" />

    <TextView
        android:id="@+id/tvCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ibSend"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="14dp"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:text="Caracteres: 140" />

</RelativeLayout>