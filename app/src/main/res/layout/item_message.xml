<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@android:color/background_light"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivProfilMessage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        tools:srcCompat="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tvSN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivProfilMessage"
        android:layout_toEndOf="@+id/ivProfilMessage"
        android:layout_toRightOf="@+id/ivProfilMessage"
        android:shadowColor="@android:color/black"
        tools:text="TextView"
        android:textColor="@color/mycolor" />

    <TextView
        android:id="@+id/tvMessageBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSN"
        android:layout_margin="7dp"
        android:layout_toEndOf="@+id/ivProfilMessage"
        android:layout_toRightOf="@+id/ivProfilMessage"
        android:minHeight="50dp"
        tools:text="TextView"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:id="@+id/tvDateMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvMessageBody"
        android:layout_toEndOf="@+id/tvMessageBody"
        android:layout_toRightOf="@+id/tvMessageBody"
        tools:text="TextView"
        android:textColor="@android:color/background_dark" />
</RelativeLayout>