<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"
    android:padding="10dp">

    <ImageView
        android:id="@+id/ivUserPic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        tools:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvBody"
        android:layout_alignStart="@+id/tvBody"
        android:layout_alignTop="@+id/ivUserPic"
        android:layout_marginBottom="8dp"
        android:autoLink="all"
        android:linksClickable="true"
        android:paddingBottom="2dp"
        android:text="Billy"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUserName"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/ivUserPic"
        android:layout_toRightOf="@+id/ivUserPic"
        android:autoLink="all"
        android:linksClickable="true"
        android:text="New Text"
        android:textColor="@android:color/black" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivUserPic"
        android:layout_alignEnd="@+id/ivUserPic"
        android:layout_alignRight="@+id/ivUserPic"
        android:layout_margin="3dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/tvRetweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="retweet"
        android:textColor="@color/twitterColor"
        android:textStyle="italic"
        android:layout_alignBottom="@+id/ivTweetImage"
        android:layout_alignLeft="@+id/tvDate"
        android:layout_alignStart="@+id/tvDate" />

    <ImageButton
        android:id="@+id/ivRetweet"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/progressBar"
        android:layout_alignRight="@+id/progressBar"
        android:layout_below="@+id/ivUserPic"
        android:layout_marginTop="10dp"
        android:background="@android:drawable/screen_background_light_transparent"
        app:srcCompat="@drawable/ic_reply_black_18px" />

    <ImageView
        android:id="@+id/ivTweetImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tvBody"
        android:layout_below="@+id/tvBody"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/ivUserPic"
        android:layout_toLeftOf="@id/tvRetweet"
        android:layout_toRightOf="@+id/ivUserPic"
        app:srcCompat="@drawable/ic_launcher" />

    <ProgressBar
        android:id="@+id/progressBarTweet"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivTweetImage"
        android:layout_centerHorizontal="true" />

</RelativeLayout>